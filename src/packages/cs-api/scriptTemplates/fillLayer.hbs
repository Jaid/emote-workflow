$.layer = $.document.layers.getByName({{{json name}}})
$.color = new RGBColor()
$.color.red = {{{json red}}}
$.color.green = {{{json green}}}
$.color.blue = {{{json blue}}}
$.item = $.layer.pathItems.rectangle($.document.height, 0, $.document.width, $.document.height)
$.item.filled = true
$.item.stroked = false
$.item.fillColor = $.color
$.item.name = {{{json itemName}}}
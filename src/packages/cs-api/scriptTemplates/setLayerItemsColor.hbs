$.layer = $.document.layers.getByName({{{json sourceLayer}}})
$.color = new RGBColor()
$.color.red = {{{json red}}}
$.color.green = {{{json green}}}
$.color.blue = {{{json blue}}}
$.setLayerItemsColor = function(layerObject) {
  $.length = layerObject.pageItems.length
  if (!$.length) {
    continue
  }
  for ($.i = 0; $.i < $.length; $.i++) {
    $.item=$.layer.pageItems[$.i]
    $.item.duplicate($.targetLayer)
  }
}
$.setLayerItemsColor($.layer)